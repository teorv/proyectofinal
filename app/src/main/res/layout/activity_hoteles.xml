<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/hoteles"
    tools:context=".Hoteles">

    <TextView
        android:id="@+id/tituloo"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="match_parent"
        app:layout_constraintVertical_bias="0.2"
        android:layout_marginHorizontal="20dp"
        android:textSize="25dp"
        android:text="@string/descripcionhoteles"
        android:textAlignment="center"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/botonVermas"
        android:text="@string/botonVermas"
        android:textColor="@color/white"
        android:background="@drawable/botonredondo"
        android:textSize="22dp"
        android:padding="10dp"
        app:layout_constraintTop_toBottomOf="@id/tituloo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</android.support.constraint.ConstraintLayout>